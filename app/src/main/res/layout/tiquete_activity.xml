<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools ="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="539dp"
        android:layout_marginStart="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fotoCodigoQR"
            android:layout_width="186dp"
            android:layout_height="180dp"
            android:src="@drawable/codigo_qr" />

        <TextView
            android:id="@+id/textViewPagoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            tools:text="Nombre" />


        <TextView
            android:id="@+id/textViewPagoCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            tools:text="Correo" />

        <TextView
            android:id="@+id/textViewPagoCantidadAsientos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            tools:text="CantidadAsientos" />

        <TextView
            android:id="@+id/textViewPagoMontoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            tools:text="Monto Total" />

        <TextView
            android:id="@+id/textViewPagoNumeroTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            tools:text="Tarjeta" />

        <Button
            android:id="@+id/buttonVolverPerfil"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Ir al perfil"
            android:textStyle="italic"
            app:backgroundTint="#9C27B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.181"
            app:layout_constraintStart_toEndOf="@+id/buttonVolverPerfil"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.047" />

        <TextView
            android:id="@+id/textViewAgradecimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            tools:text="Gracias por su compra, distrute la funciÃ³n" />

    </LinearLayout>

</LinearLayout>