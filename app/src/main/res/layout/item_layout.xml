<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/foto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/foto"
        android:layout_toEndOf="@+id/foto"
        />
    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/dia"
        android:layout_toEndOf="@+id/dia"
        />
    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/nombre"
        android:layout_toRightOf="@+id/dia"
        android:layout_toEndOf="@+id/dia"
        />

    <TextView
        android:id="@+id/horadeinicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/descripcion"
        android:layout_toRightOf="@+id/foto"
        android:layout_toEndOf="@+id/foto"
        />

    <TextView
        android:id="@+id/teatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/horadeinicio"
        android:layout_toRightOf="@+id/dia"
        android:layout_toEndOf="@+id/dia"
        />

    <TextView
        android:id="@+id/horafinaliza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/teatro"
        android:layout_toRightOf="@+id/foto"
        android:layout_toEndOf="@+id/foto"
        />
    <TextView
        android:id="@+id/duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/horafinaliza"
        android:layout_toRightOf="@+id/dia"
        android:layout_toEndOf="@+id/dia"
        />

    <Button
        android:id="@+id/btncomprar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="2dp"
        android:text="Comprar entradas" />
</RelativeLayout>