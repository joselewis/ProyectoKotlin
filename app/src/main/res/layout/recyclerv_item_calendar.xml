<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <ImageView
        android:id="@+id/fotoObra"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/fotoObra"
        android:layout_toEndOf="@+id/fotoObra"
        />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/dia"
        android:layout_toRightOf="@+id/dia"
        android:textSize="20sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/nombre"
        android:layout_toRightOf="@+id/dia"
        android:layout_toEndOf="@+id/dia"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/horadeinicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descripcion"
        android:layout_toEndOf="@+id/fotoObra"
        android:layout_toRightOf="@+id/fotoObra"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/teatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/horadeinicio"
        android:layout_toRightOf="@+id/dia"
        android:layout_toEndOf="@+id/dia"
        />

    <TextView
        android:id="@+id/horafinaliza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/teatro"
        android:layout_toRightOf="@+id/fotoObra"
        android:layout_toEndOf="@+id/fotoObra"
        />
    <TextView
        android:id="@+id/duracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@+id/horafinaliza"
        android:layout_toRightOf="@+id/dia"
        android:layout_toEndOf="@+id/dia"
        />

    <Button
        android:id="@+id/buttonVerButacas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Asientos"
        android:textSize="10sp"
        android:textStyle="italic"
        app:backgroundTint="#9C27B0" />
</RelativeLayout>